    <div class="container">
        <!-- Form Section -->
        <section class="form-section">
            <h1>EDIT MY PROJECT</h1>
            <form method="post" action="/project">
                <div class="form-group">
                    <label for="projectName">Project Name</label>
                    <input type="text" id="projectName" name="projectName" value="{{project.projectName}}" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="startDate">Start Date</label>
                        <input type="date" id="startDate" name="startDate" value="{{project.startDate}}" required>
                    </div>
                    <div class="form-group"> 
                        <label for="endDate">End Date</label>
                        <input type="date" id="endDate" name="endDate" value="{{project.endDate}}" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" rows="4" name="description"  required>{{project.description}}</textarea>
                </div>
                <div class="form-group">
                    <label>Technologies</label>
                    <div class="checkbox-group">
                        <input type="checkbox" id="nodejs" value="Node Js" name="nodejs" value="{{project.nodejs}}"> Node Js
                        <input type="checkbox" id="nextjs" value="Next Js" name="nextjs" value="{{project.nextjs}}"> Next Js
                        <input type="checkbox" id="reactjs" value="React Js" name="reactjs" value="{{project.reactjs}}"> React Js
                        <input type="checkbox" id="typescript" value="TypeScript" name="typescript" value="{{project.typescript}}"> TypeScript
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Upload Image</label>
                    <input type="file" id="image" accept="image/*" required>
                    <img id="imagePreview" src="" alt="Image Preview" style="display: none;">
                </div>
                <button type="submit">Edit Project</button>
            </form>
        </section>
