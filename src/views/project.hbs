    <div class="container">
        <!-- Form Section -->
        <section class="form-section">
            <h1>ADD MY PROJECT</h1>
            <form method="post" action="/project">
                <div class="form-group">
                    <label for="projectName">Project Name</label>
                    <input type="text" id="projectName" name="projectName" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="startDate">Start Date</label>
                        <input type="date" id="startDate" name="startDate" required>
                    </div>
                    <div class="form-group">
                        <label for="endDate">End Date</label>
                        <input type="date" id="endDate" name="endDate" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" rows="4" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label>Technologies</label>
                    <div class="checkbox-group">
                       <input type="checkbox" id="nodejs" value="Node Js" name="technologies"> Node Js
            <input type="checkbox" id="nextjs" value="Next Js" name="technologies"> Next Js
            <input type="checkbox" id="reactjs" value="React Js" name="technologies"> React Js
            <input type="checkbox" id="typescript" value="TypeScript" name="technologies"> TypeScript
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Upload Image</label>
                    <input type="file" id="image" accept="image/*" required>
                    <img id="imagePreview" src="" alt="Image Preview" style="display: none;">
                </div>
                <button type="submit">Submit</button>
            </form>
        </section>

        <!-- Projects Display Section -->
        <section class="projects-section">
            <h1>MY PROJECTS</h1>
            <div id="projectsContainer" class="projects-container">
           {{#each projects}}
        <div class="projects-container">
         
            <div class="project-card img">
              <img src="https://th.bing.com/th/id/OIP.rm9p-WaBaJWY0lwZ-y9rjAHaE8?rs=1&pid=ImgDetMain" alt=""/>
              <h2>
                <a href="/project-detail/{{id}}" target="_blank" class="h2"
                >{{project_name}}</a>
              </h2>
              <p> {{start_date}}</p>
              <p> {{end_date}}</p>
              <p>{{get_duration start_date end_date}}
              <p> {{ get_full_time created_at}}</p>
             <p>  {{description}}</p>
             <p> {{technologies}}
             <p>{{ get_distance_time created_at}} | {{author}}</p>
              <div class="btn-group">
              
              
              <a class="edit-project" href="/edit-project/{{id}}" >Edit Post</a>
             
             
              <form method="post" action="/delete-project/{{id}}">
                <button type="submit">Delete Post</button>
                </form>
              
             </div> 
          
        </div>
        {{/each}}
            </div>
